/*
 * @lang L2
 * @name 快速排序
 * @author Tao Fei (Filia.Tao@gmail.com)
 */
func void exchange(int[] ar, int x, int y)
{
	var int tmp end
	tmp = ar[x];
	ar[x] = ar[y];
	ar[y] = tmp;
}

func void quick_sort(int[] ar, int start, int en)
{
	var int m,i,j end
	if(en - start > 1)
	(
		m = ar[start];
		i = start;
		j = en;
		while(i < j)(
			while(i <= en && ar[i] <= m)(
				i++
			);
			while(j >= start && ar[j] > m)(
				j--
			);
			if(i < j)
			(
				exchange(ar, i , j);
			);
		);
		exchange(ar , start, j);
		quick_sort(ar, start, j-1);
		quick_sort(ar , j+1, en);
	);
}

func void main()
{
	var int[] ar end
	ar = new int[10];
	ar[0] = 7;
	ar[1] = 3;
	ar[2] = 4;
	ar[3] = 6;
	ar[4] = 5;
	ar[5] = 9;
	ar[6] = 10;
	ar[7] = 1;
	ar[8] = 2;
	ar[9] = 8;
	quick_sort(ar, 0, 9);
	print (ar);
}
